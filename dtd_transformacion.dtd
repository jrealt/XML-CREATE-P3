<!ELEMENT web (#PCDATA)>
<!ATTLIST web
  xmlns CDATA #FIXED ''
  enlace CDATA #REQUIRED>

<!ELEMENT lista (elemento)+>
<!ATTLIST lista
  xmlns CDATA #FIXED ''>

<!ELEMENT elemento (parrafo?,frase?,imagen?,web?)+>
<!ATTLIST elemento
  xmlns CDATA #FIXED ''>

<!ELEMENT tabla (fila)+>
